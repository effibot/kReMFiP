    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Module",
            "type": "process",
            "command": "make",
            "args": [
                "all"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean Module",
            "type": "process",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Push Commit",
            "type": "shell",
            "command": "git commit -am 'Update' && git push",
            "problemMatcher": [],
            "group": {
                "kind": "none",
                "isDefault": false
            }
        }
    ]
}